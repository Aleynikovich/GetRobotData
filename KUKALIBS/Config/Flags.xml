<KrcListMonitor Name="Flags" Width="250">
   <Tab UpperBound="999">
      <Column Type="Text" Name="Nr" Align="Right" Width="30">
         <Text>#</Text>
      </Column>
	   <Column Type="Variable" ShowIcon="true" Name="Value" Align="Center" Width="40" EditableForUser="0">
	      <Variable Type="BOOL" Name="$FLAG[]"></Variable>
	      <ShowIcon Value="False">Res\ledoff.ico</ShowIcon>
	      <ShowIcon Value="True">Res\ledon.ico</ShowIcon>
	   </Column>
	   <Column Type="DB" Name="Name" Align="Left" Width="20" EditableForUser="0">
	      <DB Module="Flag" Key="FlagText#" Default="Flag"></DB>
	   </Column>
   </Tab>
</KrcListMonitor>