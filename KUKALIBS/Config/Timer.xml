<KrcListMonitor Name="Timer" Width="250">
   <Tab UpperBound="64">
      <Column Type="Text" Name="Nr" Align="Right" Width="25">
         <Text>#</Text>
      </Column>
	   <Column Type="Variable" ShowIcon="true" Name="Status" Align="Center" Width="50" EditableForUser="0">
	      <Variable Type="BOOL" Name="$TIMER_STOP[]"></Variable>
	      <ShowIcon Value="False">Res\timerstart.ico</ShowIcon>
	      <ShowIcon Value="True">Res\timerstop.ico</ShowIcon>
	   </Column>
	   <Column Type="Variable" ShowIcon="true" Name="T" Align="Center" Width="35" EditableForUser="999">
	      <Variable Type="BOOL" Name="$TIMER_FLAG[]"></Variable>
	      <ShowIcon Value="False">Res\empty.ico</ShowIcon>
	      <ShowIcon Value="True">Res\timerflag.ico</ShowIcon>
	   </Column>
	   <Column Type="Variable" Name="TimerValue" Align="Right" Width="61" EditableForUser="0">
	      <Variable Type="INT" Name="$TIMER[]"></Variable>
	   </Column>
	   <Column Type="DB" Name="Name" Align="Left" Width="20" EditableForUser="0">
	      <DB Module="Timer" Key="TimerText#" Default="Timer"></DB>
	   </Column>
   </Tab>
</KrcListMonitor>